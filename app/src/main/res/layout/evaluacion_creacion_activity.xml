<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="nombreEval"
            type="co.edu.uninorte.movilrubricaapp1.Model.Evaluacion"></variable>

        <variable
            name="CreacionEvaluacionmodel"
            type="co.edu.uninorte.movilrubricaapp1.CreacionEvaluacionActivitty"></variable>

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.60"
                android:paddingTop="20dp"
                android:text="Creación Evaluacion"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/nombreEvalEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@={nombreEval.nombre}" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.29"
                android:paddingTop="20dp"
                android:text="Escoja una rúbrica a aplicar"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinnerRubricas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.45"
                bind:RubricaSpinner="@{CreacionEvaluacionmodel.spinnerlist}" />

            <ExpandableListView
                android:id="@+id/exprubrica"
                android:layout_width="match_parent"
                android:layout_height="263dp" />

        </LinearLayout>

    </LinearLayout>
</layout>
